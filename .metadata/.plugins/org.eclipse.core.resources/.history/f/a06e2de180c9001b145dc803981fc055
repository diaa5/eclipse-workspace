package task1;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

import com.shaft.gui.element.ElementActions;
import com.shaft.validation.Assertions;

public class Scenario2_methods {
	
	private WebDriver driver;
    private By app=By.xpath("//div[@title='Facebook']");
    private By icon=By.xpath("//img[@alt='Cover art']");
    
    public Scenario2_methods(WebDriver driver) {
    	this.driver = driver;
        }
   public void validate_icon()
   {

	
	  WebElement search = driver.findElement(By.xpath("//input[@id='gbqfq']"));
	  search.sendKeys("facebook"+"\n");

	  new ElementActions(driver).click(app);
	  Assertions.assertElementMatches(driver, icon, "facebook icon exist");
	 
   }


}
