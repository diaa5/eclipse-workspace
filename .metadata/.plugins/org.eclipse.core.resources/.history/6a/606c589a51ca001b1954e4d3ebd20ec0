package task1;

import org.testng.Assert;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

import com.shaft.gui.element.ElementActions;
import com.shaft.validation.Assertions;


public class Registerarion {
	private WebDriver driver;
	private By sign_in=By.className("login");
    private By Email=By.id("email_create");
    private By register=By.xpath("//span[normalize-space()='Create an account']");
    private By gender=By.id("id_gender1");
    private By first_name=By.id("customer_firstname");
    private By lastname=By.id("customer_lastname");
    private By password=By.id("passwd");
    private By add_firstname=By.id("firstname");
    private By add_lastname=By.id("lastname");
    private By address=By.id("address1");
    private By city=By.id("city");
    private By state=By.id("id_state");
    private By postcode=By.id("postcode");
    private By country=By.id("id_country");
    private By mobile=By.id("phone_mobile");
    private By alias=By.id("alias");
    private By create=By.xpath("//span[normalize-space()='Register']");
    String URL ;
    
    public Registerarion(WebDriver driver) {
    	this.driver = driver;
        }
   public void select_app()
   {
	   
	   new ElementActions(driver).click(apps);
	   URL = driver.getCurrentUrl();
	
	  Assert.assertEquals(URL, "https://play.google.com/store/apps");
	   new ElementActions(driver).click(categories);
	   new ElementActions(driver).click(education);
	   Assertions.assertElementAttribute(driver, category, "Text", "Education");
	   new ElementActions(driver).type(search, "ted");
		  /*WebElement search = driver.findElement(By.xpath("//input[@id='gbqfq']"));
		  search.sendKeys("ted"+"\n");*/
	   new ElementActions(driver).click(app_button);
	   Assertions.assertElementAttribute(driver, app_name, "Text", "TED");
   }

}
